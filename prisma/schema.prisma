generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Progress {
  id             Int      @id @default(autoincrement())
  studentId      String
  accuracy       Int
  feedback       String
  recommendation String
  nextSteps      String   // store as JSON string
  createdAt      DateTime @default(now())
}
